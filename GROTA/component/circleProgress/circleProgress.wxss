/* circular-progress-dialog.wxss */
.mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  display:flex;
  justify-content: center;
  align-items: center;
}

.container {
  width: 300px;
  height: 250px;
  background-color:white;
  border-radius: 8px;
  position: relative;
}
.progress-canvas-group{
  width: 300px;
  height: 250px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
}

.progress-canvas {
  margin-top: 10px;
  width: 150px;
  height: 150px;
}

.img-group{
  width: 300px;
  height: 250px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
}